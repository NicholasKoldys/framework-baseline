{
  "name": "javascript-development-environment",
  "version": "1.0.0",
  "description": "JavaScript development environment",
  "scripts": {
    "prestart": "babel-node buildScripts/startMessage.js",
    "start": "npm-run-all --parallel start-mockapi open:src lint:watch test:watch",
    "open:src": "babel-node buildScripts/srcServer.js",
    "mock:userdata": "babel-node buildScripts/generateMockData",
    "prestart-mockapi": "npm run mock:userdata",
    "start-mockapi": "json-server --watch src/api/db.json --port 3301",
    "lint": "esw webpack.config.* src buildScripts --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --reporter progress buildScripts/testSetup.js \"src/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "clean:dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean:dist test lint",
    "build": "babel-node buildScripts/build.js",
    "postbuild": "babel-node buildScripts/distServer.js",
    "preprodtest": "npm run clean:dist",
    "prodtest": "npm run open:src",
    "predevbuild": "npm run clear:dist",
    "devbuild": "npx webpack build --config ./webpack.config.dev.mjs --stats verbose"
  },
  "author": "Nicholas Koldys",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.21.5",
    "@babel/core": "7.22.1",
    "@babel/node": "^7.22.1",
    "@babel/preset-env": "7.22.4",
    "@babel/register": "7.21.0",
    "@types/webpack-dev-middleware": "^5.3.0",
    "babel-loader": "9.1.2",
    "chai": "4.3.7",
    "chalk": "4.1.2",
    "compression": "1.7.4",
    "copy-webpack-plugin": "^5.1.2",
    "css-loader": "6.8.1",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-watch": "8.0.0",
    "express": "4.18.2",
    "faker": "^6.6.6",
    "html-webpack-plugin": "5.5.1",
    "jsdom": "^22.1.0",
    "json-schema-faker": "0.5.3",
    "json-server": "0.17.3",
    "localtunnel": "2.0.2",
    "mini-css-extract-plugin": "^2.7.6",
    "mocha": "10.2.0",
    "npm-run-all": "4.1.5",
    "rimraf": "5.0.1",
    "style-loader": "3.3.3",
    "surge": "0.23.1",
    "webpack": "^5.86.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "6.1.1",
    "workbox-webpack-plugin": "^7.0.0",
    "workbox-window": "^7.0.0"
  }
}
